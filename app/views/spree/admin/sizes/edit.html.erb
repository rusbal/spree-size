<% content_for :page_title do %>
  <%= link_to Spree.t(:sizes), spree.admin_sizes_url %> /
  <%= @size.name %>
<% end %>

<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @size } %>

<%= form_for [:admin, @size] do |f| %>
  <fieldset>
    <%= render partial: 'form', locals: { f: f } %>
    <%= render partial: 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>
