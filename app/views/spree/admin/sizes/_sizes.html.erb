<table class="table table-condensed table-bordered">
  <thead>
    <tr data-hook="available_header">
      <th><%= Spree.t(:name) %></th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @sizes.each do |size| %>
      <tr id="row_<%= size.id %>" data-hook="available_row">
        <td><%= size.name %></td>
        <td class="actions actions-1">
          <%= link_to_with_icon 'save', Spree.t(:select), select_admin_size_url(size), class: ' btn btn-default btn-sm ajax select_properties_from_size', no_text: true %>
        </td>
      </tr>
    <% end %>
    <% if @sizes.empty? %>
     <tr data-hook="available_none"><td colspan="2"><% Spree.t(:none) %>.</td></tr>
    <% end %>
  </tbody>
</table>
