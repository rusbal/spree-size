<div data-hook="admin_size_form_fields">
  <%= f.field_container :name, class: ['form-group'] do %>
    <%= f.label :name, Spree.t(:name) %> <span class="required">*</span><br />
    <%= f.text_field :name, class: 'form-control' %>
    <%= f.error_message_on :name %>
  <% end %>

  <%= f.field_container :description, class: ['form-group'] do %>
    <%= f.label :description, Spree.t(:description) %><br />
    <%= f.text_field :description, class: 'form-control' %>
    <%= f.error_message_on :description %>
  <% end %>

  <%= f.field_container :video, class: ['form-group'] do %>
    <%= f.label :video, Spree.t(:video) %><br />
    <% if @size.video.attached? %>
      <%= show_video(@size.video) %>
    <% end %>
    <%= f.file_field :video, class: 'form-control' %>
    <%= f.error_message_on :video %>
  <% end %>

  <%= f.field_container :image, class: ['form-group'] do %>
    <%= f.label :image, Spree.t(:image) %><br />
    <% if @size.image.attached? %>
      <%= resize_image(@size.image) %>
    <% end %>
    <%= f.file_field :image, class: 'form-control' %>
    <%= f.error_message_on :image %>
  <% end %>

  <div class="row">
    <%= f.field_container :min, class: ['form-group col-sm-3'] do %>
      <%= f.label :min, Spree.t(:min) %> <span class="required">*</span><br />
      <%= f.number_field :min, class: 'form-control' %>
      <%= f.error_message_on :min %>
    <% end %>
    <%= f.field_container :max, class: ['form-group col-sm-3'] do %>
      <%= f.label :max, Spree.t(:max) %> <span class="required">*</span><br />
      <%= f.number_field :max, class: 'form-control' %>
      <%= f.error_message_on :max %>
    <% end %>
  </div>
</div>
